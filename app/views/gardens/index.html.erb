<h1>index</h1>
<% if current_user.admin == true %>
<b><%= "ADMIN STATUS" %></b>
<% else %>
<b><%= "USER STATUS" %></b>

<% end %>
<ul>
    <% @gardens.each do |garden| %>
    <li><%= link_to "#{garden.title}", garden_path(garden) %> //
    <%= garden.user.email %>
  </li>
  <% end %>
</ul>

<ul>
  <% if policy(Garden).create? %>
    <li><%= link_to "New Garden", new_garden_path %></li>
  <% end %>
 <li> <%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
 <% if current_user.admin == false %>
  <li><%= link_to "My gardens", my_gardens_path %></li>
  <% end %>
</ul>
